<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>




    <style name="Text.Regular" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Regular.Small.Dark" parent="Text.Regular">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="Text.Regular.Small.Primary" parent="Text.Regular.Small.Dark">
        <item name="android:textColor">@color/grayPrimary</item>
    </style>

    <style name="Text.Regular.Small.Accent" parent="Text.Regular.Small.Dark">
        <item name="android:textColor">@color/grayAccent</item>
    </style>


    <style name="Text.Regular.Medium.Dark" parent="Text.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="Text.Regular.Medium.Black" parent="Text.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="Text.Regular.Medium.Primary" parent="Text.Regular.Medium.Dark">
        <item name="android:textColor">@color/grayPrimary</item>
    </style>

    <style name="Text.Regular.Medium.Accent" parent="Text.Regular.Medium.Dark">
        <item name="android:textColor">@color/grayAccent</item>
    </style>


    <style name="Text.Regular.Medium.Gray" parent="Text.Regular.Medium.Dark">
        <item name="android:textColor">@color/gray373737</item>
    </style>


    <style name="Text.Regular.Large" parent="Text.Regular">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


    <style name="Text.SemiBold" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.SemiBold.Small" parent="Text.SemiBold">
        <item name="android:textSize">@dimen/sp_12</item>
    </style>


    <style name="Text.SemiBold.Medium" parent="Text.SemiBold">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Text.SemiBold.Large" parent="Text.SemiBold">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="Text.Bold" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Text.Bold.Medium" parent="Text.Bold">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Text.Bold.Large" parent="Text.Bold">
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="Text.Bold.30" parent="Text.Bold">
        <item name="android:textSize">@dimen/sp_30</item>
    </style>



    <style name="Button.Yellow.Rounded.Filled" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:paddingStart">@dimen/dp_75</item>
        <item name="android:paddingEnd">@dimen/dp_75</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp_24</item>
        <item name="rippleColor">@color/white</item>
    </style>


    <style name="Button.Gray.Rounded.Filled" parent="Text.Bold">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Dark.Rounded.Lined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:paddingStart">@dimen/dp_32</item>
        <item name="android:paddingEnd">@dimen/dp_32</item>
        <item name="android:paddingTop">@dimen/dp_16</item>
        <item name="android:paddingBottom">@dimen/dp_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp_24</item>
        <item name="rippleColor">@color/white</item>
        <item name="strokeColor">@color/colorAccent</item>
        <item name="strokeWidth">@dimen/dp_1</item>
    </style>

    <style name="EditText" parent="Text.Regular.Small.Dark">
        <item name="android:layout_width">match_parent</item>
        <item name="android:drawablePadding">@dimen/dp_16</item>
        <item name="android:textColorHint">@color/grayAccent</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">@color/grayPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_12sdp</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="BackGroundStyle">
        <item name="background">@color/grayFAFAFA</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


</resources>
